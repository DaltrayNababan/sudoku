<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/textAppColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="@string/app_color_primary_title"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/viewAppColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAppColorSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:text="@string/app_color_primary_summary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/textAppColor"
        app:layout_constraintStart_toStartOf="@id/textAppColor"
        app:layout_constraintTop_toBottomOf="@id/textAppColor" />

    <View
        android:id="@+id/viewAppColor"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/coffee_colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
